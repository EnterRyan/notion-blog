{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      //"@/*": ["./*"],
      "@shared-client/*": ["src/shared/client/*"],
      "@shared-server/*": ["src/shared/server/*"],

      "@entities-client/*": ["src/entities/client*"],
      "@entities-server/*": ["src/entities/server/*"],

      "@features-client/*": ["src/features/client*"],
      "@features-server/*": ["src/features/server*"],
      
      "@widgets/*": ["src/widgets/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
